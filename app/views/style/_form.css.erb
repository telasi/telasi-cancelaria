form {}
form input[type=text], form input[type=password] {margin: 2px 0 10px 0; border: 1px solid black; padding: 3px;}
form select {margin: 2px 0 10px 0; border: 1px solid black; padding: 3px;}
form input[type=submit] { padding: 2px 7px; }
.field_with_errors input[type=text], .field_with_errors input[type=password] {border: 1px solid red !important; color: red !important;}
label {font-weight: bold;}
.field_with_errors {color: red; display: inline;}
#error_explanation {background: #fcb; padding: 5px 30px; color: red; width: 800px; border: 1px solid red; border-radius: 5px; margin: 5px 0;}
#error_explanation h2 {display: none;}
ul.field_list {list-style: none;}
ul.field_list li {float: left; padding-right: 5px;}