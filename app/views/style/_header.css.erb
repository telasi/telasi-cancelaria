#header {}
#title {position:relative; background: url('<%= image_path 'logo48.png' %>') no-repeat 10px 50%; height: 48px; border-bottom: 1px solid black; padding: 10px 10px 10px 68px;}
#title h1 {font-size: 16px; color: #9f1212;}
#header_menu { position: absolute; bottom: 0px; }
#header_menu ul {list-style: none;}
#header_menu ul li {float: left; padding: 5px 10px 2px; margin: 0 10px 0 0;}
#header_menu ul li a { text-decoration: none; color: black; }
#header_menu ul li.selected { background: black; }
#header_menu ul li.selected a { background: black; color: white; }
#submenu { padding: 5px 10px; background: #eaeaea; border-bottom: 1px solid #888; font-size: 12px; }
#submenu a { text-decoration: none; color: black; padding: 2px 10px; border-radius: 5px; }
#submenu a.selected { background: #888; color: white; }